.slowblink
  animation: blink-animation 2.5s steps(100, start) 2
@keyframes blink-animation
  to
    opacity 0

.header
  position fixed
  width 100%
  border-bottom 1px solid grey
  z-index 30
  &__logo
    cursor pointer
    &__img
      width 150px
  &__breadcrumb
    width auto
  &__menu
    justify-content flex-end
    &__list
      display none
      margin-left 50px
      .list__item
        padding-right 30px
        &__link
          color blue
          font-size 16px
          &:hover
            color darkBlue
    &__system
      display flex
      justify-content flex-end
      width 100%
      &__icon
        margin-right 5px
        opacity 1
      &__text
        margin-right 5px
        font-size 14px
    &__rightside
      display flex
      margin-top 15px
      list-style none
      &__adminlink
        .adminlink
          &__btn
            margin-right 15px
            &::after
              margin-left 15px
          &__setting
            padding 0
            .setting__link
              padding 10px
              &:hover
                color offWhite
      &__itemsearch
        display none
        margin-right 8%
        width 55%
        &__search
          width 100%
          .search__addonsearch
            background-color transparent
            cursor pointer
      &__itemquestion
        display none
        &__btnquestion
          margin-right 30px
          .btnquestion__icon
            color darkGrey
      &__itemprofil
        .profilgroup
          margin-right 30px
          &__name
            border 0
            padding 0 5px
            &::after //bootstrap overrides
              vertical-align middle
              color darkGrey
            &__imgprofil
              display inline-block
              margin-right 10px
              width 40px
              height 40px
            &__text
              display inline-block
              margin-right 10px
          &__sub
            color darkGrey
            cursor pointer
            &:focus
              box-shadow none
          &__setting
            padding 0
            left inherit
            right 0
            width 100%
            cursor pointer
            .setting__link
              padding 10px
              // color fontColor
              &:hover
                color offWhite
      &__itemnotification
        display none
        &__timeline
          margin-right 30px
          .timeline
            &__btnnotif
              color darkGrey
              &::after
                margin-left 15px
            &__subdropdown
              padding 0
              left inherit
              right 0
              cursor pointer
              &__text
                padding 10px;

// MEDIAQUERIES

@media (min-width: min-lg) and (max-width: max-lg)
  .header
    &__menu
      &__rightside
        display flex
        justify-content flex-end
        width 100%

@media (min-width: min-md) and (max-width: max-md)
  .header
    &__logo__img
      margin-left 0
    &__menu
      &__rightside
        width 100%

@media (min-width: min-sm) and (max-width: max-sm)
  .header
    &__logo__img
      margin-left 0
    &__menu
      &__rightside
        padding-left 0
        width 100%
        &__itemquestion
          display none

@media (max-width: max-xs)
  .header
    &__logo__img
      margin-left 0
    &__menu
      &__rightside
        flex-wrap wrap
        padding-left 0
        &__adminlink
          margin-bottom 20px
        &__itemlanguage
          margin-bottom 20px
        &__itemquestion
          display none
        &__itemprofil
          &__profilgroup
            margin-top 20px
          .profilgroup__setting
            left 0


